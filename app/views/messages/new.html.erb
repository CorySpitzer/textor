
<% if @message.errors.any? %>
  <% @message.errors.full_message.each do |message| %>
    <%= message %>
  <% end %>
<% end %>

<%= simple_form_for(@message) do |f| %>
  <%= f.input :to, collection: @contacts,
                    as: :check_boxes,
                    label_method: :name,
                    value_method: :cell_number %>

  <%= f.input :from %>
  <%= f.input :body %>
  <%= f.button :submit, "Send Message" %>
<% end %>
